// @stylint off
*
	margin 0
	padding 0



.content
	width 100%
	max-width 450px



.player
	position relative
	display flex
	flex-direction column
	padding 16px 24px
	background #242731
	border-radius 4px 4px 0 0
	box-shadow 0 0 5px rgba(0, 0, 0, .6)



	&__title
		margin 0
		padding-bottom 8px
		color #f0f0f0
		font-size 19px
		font-weight 500
		border-bottom 1px solid #1E212B



	&__playlist
		position absolute
		right 24px
		top 14px
		padding 4px 12px
		background-color rgba(255, 255, 255, .1)
		border-radius 4px
		cursor pointer
		text-decoration none
		color #d0d0d0
		font-size 14px
		font-weight 500
		transition .1s ease-out

		&:hover
			background-color rgba(0, 0, 0, .2)



	&__meta
		margin-top 8px



	&__meta-title
		color #dfdfdf
		font-size 16px
		font-weight 500



	&__meta-artist
		color #bababa
		font-size 14px

		&_live
			color #ef5350



	&__progress
		display flex
		align-items center
		margin-top 8px
		padding-bottom 8px
		border-bottom 1px solid #1E212B



	&__progress-background
		height 4px
		margin 0 16px
		background-color #d0d0d0
		flex-grow 1



	&__progress-time
		color #eaeaea
		font-size 13px



	&__progress-color
		height 100%
		background-color #808080



	&__controls
		display flex
		height 40px
		margin-top 8px



	&__play-button
		width 40px
		height 40px
		cursor pointer
		flex-shrink 0

		& ^[0]__icon
			fill #749ce5

			&:hover
				fill #88b0f9



	&__icon
		max-width 100%
		max-height 100%
		fill #808080



	&__stream-selection
		position relative


	&__dropdown-button
		width 130px
		height 40px
		margin-left 8px
		padding 0 16px
		color #749ce5
		font-size 13px
		font-weight 500
		background-color transparent
		border none
		border-radius 4px
		cursor pointer
		transition .1s ease-out
		outline none

		&:hover
			background-color #1E212B



	&__dropdown
		overflow hidden
		position absolute
		top 100%
		left 8px
		width 130px
		height 0
		margin-top 4px
		list-style none
		background-color #242731
		border-radius 4px
		box-shadow 0 2px 10px rgba(0, 0, 0, .6)
		transition .3s ease-out

		&_active
			height 88px



	&__dropdown-item
		color #eaeaea
		font-size 13px
		font-weight 500
		padding 12px 16px
		cursor pointer
		transition .1s ease-out

		&:hover
			background-color #1E212B



	&__volume
		display flex
		align-items center
		justify-content flex-end
		flex-grow 1
		height 40px



	&__volume-icon
		width 32px
		height 32px



	&__volume-slider
		flex-grow 1
		max-width 100px
		margin 0 8px

