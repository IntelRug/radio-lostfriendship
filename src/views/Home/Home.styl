.content
	width 100%
	max-width 550px

	&__chat
		overflow hidden
		margin-top 8px
		box-shadow 0 0 5px rgba(0, 0, 0, .6)
		border-radius 4px



.player
	position relative
	display flex
	flex-direction column
	padding 16px 24px
	background #242731
	border-radius 4px 4px 0 0
	box-shadow 0 0 5px rgba(0, 0, 0, .6)



	&__header
		display flex
		padding-bottom 8px
		border-bottom 1px solid #1E212B



	&__title
		overflow hidden
		flex-grow 1
		margin 0
		color #f0f0f0
		font-size 19px
		font-weight 500
		white-space nowrap
		text-overflow ellipsis



	&__playlist
		height 30px
		padding 0 12px
		color #d0d0d0
		font-size 14px
		font-weight 500
		line-height 30px
		text-decoration none
		cursor pointer
		background-color rgba(255, 255, 255, .1)
		border-radius 4px
		transition .1s ease-out

		&:hover
			background-color rgba(0, 0, 0, .2)



	&__meta
		margin-top 8px



	&__meta-title
		color #dfdfdf
		font-size 16px
		font-weight 500



	&__meta-artist
		color #bababa
		font-size 14px

		&_live
			color #ef5350



	&__progress
		display flex
		align-items center
		margin-top 8px
		padding-bottom 8px
		border-bottom 1px solid #1E212B



	&__progress-background
		flex-grow 1
		height 4px
		margin 0 16px
		background-color #d0d0d0



	&__progress-time
		color #eaeaea
		font-size 13px



	&__progress-color
		height 100%
		background-color #808080



	&__controls
		display flex
		align-items center
		margin-top 8px



	&__play-button
		flex-shrink 0
		width 40px
		height 40px
		cursor pointer
		background transparent
		border none
		outline none

		& ^[0]__icon
			transition .1s ease-in
			fill #749ce5

			&:hover
				fill #88b0f9

		&:focus
			outline none



	&__icon
		max-width 100%
		max-height 100%
		fill #808080



	&__stream-selection
		position relative
		z-index 10
		width calc(100% - 48px)
		height 40px
		margin-left 8px

		+above(481px)
			width auto


	&__dropdown-button
		width 100%
		height 40px
		padding 0 16px
		color #749ce5
		font-size 13px
		font-weight 500
		cursor pointer
		background-color #1E212B
		border none
		border-radius 4px
		outline none
		transition .1s ease-out

		+above(481px)
			background-color transparent

		&:hover
			background-color #1E212B

		&:focus
			outline none



	&__dropdown
		overflow hidden
		width 100%
		height 0
		margin-top 4px
		list-style none
		background-color #242731
		border-radius 4px
		box-shadow 0 2px 10px rgba(0, 0, 0, .6)
		transition .3s ease-out

		&_active
			height 88px



	&__dropdown-item
		padding 12px 16px
		color #eaeaea
		font-size 13px
		font-weight 500
		white-space nowrap
		cursor pointer
		transition .1s ease-out

		&:hover
			background-color #1E212B



	&__volume
		display none
		align-items center
		justify-content flex-end
		flex-grow 1

		+above(481px)
			display flex



	&__volume-icon
		flex-shrink 0
		width 32px
		height 32px



	&__volume-slider
		flex-basis 100px
		max-width 100px
		margin 0 8px
