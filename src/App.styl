.page
	position relative
	display block
	height 100%
	min-height 100%



	&__body
		height 100%
		min-height 100%



	&__wrapper
		display flex
		flex-direction column
		min-height 100%



	&__content
		display flex
		align-items center
		flex-direction column
		justify-content center
		margin 0 16px
		flex 1 0 auto



	&__footer
		flex 0 0 auto



.background
	display block



	&__image
		position fixed
		top 0
		left 0
		z-index -1
		width 100vw
		height 100vh
		background url(/img/background/relation_by_simonk0.jpg)
		background-repeat no-repeat
		background-attachment fixed
		background-position bottom
		background-size cover
