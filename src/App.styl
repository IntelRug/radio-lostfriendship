*
	margin 0
	padding 0

.page
	position relative
	display block
	height 100%
	min-height 100%



	&__body
		min-width 320px
		height 100%
		min-height 100%
		font-family 'Roboto', Arial, sans-serif
		font-size 16px
		font-weight 400
		line-height 1.5
		background url(/img/background/relation_by_simonk0.jpg) no-repeat fixed center / cover



	&__wrapper
		display flex
		flex-direction column
		height 0
		min-height 100%



	&__content
		display flex
		justify-content center
		align-items center
		flex 1 0 auto
		flex-direction column
		margin 0 16px



	&__footer
		flex 0 0 auto
