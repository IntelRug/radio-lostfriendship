.content
	display block
	width 100%
	max-width 550px

	&__chat
		position relative
		overflow hidden
		margin-top 8px
		box-shadow 0 0 5px rgba(0, 0, 0, .6)

		& iframe
			display block
			width 100%
			height 220px
			border none



	&__open-link
		position absolute
		top 0
		right 0
		height 100%

		& .icon
			width 24px
			height 24px
			padding 4px
			background #242731
			border-radius 0 0 0 4px
			fill #749ce5

			&:hover
				fill #88b0f9


