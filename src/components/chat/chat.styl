.chat
	position relative
	display block



	&__iframe
		display block
		width 100%
		height 220px
		border none



	&__link
		position absolute
		top 0
		right 0
		padding 4px
		outline none

		& .icon
			width 24px
			height 24px
			background $color-bg-primary
			border-radius 0 0 0 4px
			fill $color-accent-primary
			defaultTransition()

			&:hover
				fill $color-accent-primary-hover
