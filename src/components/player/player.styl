.player
	position relative
	display flex
	flex-direction column



	&__header
		display flex
		padding-bottom 8px
		border-bottom 1px solid $color-border



	&__title
		overflow hidden
		margin 0
		color $color-text-primary
		font-size 19px
		font-weight 500
		white-space nowrap
		text-overflow ellipsis



	&__listeners
		display flex
		align-items center
		justify-content flex-end
		flex-grow 1
		flex-shrink 0
		margin 0 10px
		color $color-accent-primary
		font-size 16px
		font-weight 500
		line-height 30px

		& .icon
			width 24px
			height 24px
			fill currentColor



	&__playlist
		cursor pointer

		& ^[0]__icon
			display block
			width 30px
			height 30px
			transition .2s ease
			fill $color-accent-secondary

			&:hover
				fill $color-accent-secondary-hover



	&__meta
		display flex
		margin-top 8px

		&_artwork_disabled
			& ^[0]__meta-artwork
				display none

			& ^[0]__progress
				margin-left 0


	&__meta-artwork
		width 44px
		height 44px
		margin-right 12px
		background-image url('/img/player/disc.svg')
		background-size cover
		border-radius 3px

		+above(400px)
			width 81px
			height 81px

	&__meta-text
		flex-grow 1


	&__meta-title
		color $color-text-primary
		font-size 16px
		font-weight 500



	&__meta-artist
		color $color-text-secondary
		font-size 14px

		&_live
			color #ef5350



	&__progress
		display flex
		align-items center
		margin-top 8px
		margin-left -56px
		padding-bottom 8px
		border-bottom 1px solid $color-border

		+above(400px)
			margin-left 0



	&__progress-background
		flex-grow 1
		height 4px
		margin 0 16px
		background-color #d0d0d0



	&__progress-time
		color #eaeaea
		font-size 13px



	&__progress-color
		height 100%
		background-color $color-bg-secondary



	&__controls
		display flex
		align-items center
		margin-top 8px



	&__play-button
		flex-shrink 0
		cursor pointer
		background transparent
		border none
		outline none

		&:focus
			outline none

		& .icon
			display block
			width 40px
			height 40px
			transition .1s ease-in
			fill $color-accent-primary

			&:hover
				fill $color-accent-primary-hover



	&__stream-selection
		position relative
		z-index 10
		width calc(100% - 48px)
		height 40px
		margin-left 8px

		+above(400px)
			width auto


	&__dropdown-button
		width 100%
		height 40px
		padding 0 16px
		color $color-accent-primary
		font-size 13px
		font-weight 500
		cursor pointer
		background-color rgba(0, 0, 0, .1)
		border none
		border-radius 4px
		outline none
		transition .1s ease-out

		+above(400px)
			background-color transparent

		&:hover
			background-color rgba(0, 0, 0, .1)

		&:focus
			outline none



	&__dropdown
		overflow hidden
		width 100%
		height 0
		margin-top 4px
		list-style none
		background-color $color-bg-primary
		border-radius 4px
		box-shadow 0 2px 10px rgba(0, 0, 0, .6)
		transition .2s ease-out

		&_active
			height 88px



	&__dropdown-item
		padding 12px 16px
		color #eaeaea
		font-size 13px
		font-weight 500
		white-space nowrap
		cursor pointer
		defaultTransition()

		&:hover
			background-color rgba(0, 0, 0, .1)



	&__volume-slider
		display none
		flex-grow 1

		+above(400px)
			display block
