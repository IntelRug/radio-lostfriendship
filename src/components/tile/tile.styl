.tile
	display block
	background $color-bg-primary
	defaultBoxShadow()

	&_paddings
		&_medium
			padding 16px 24px

		&_small
			padding 8px 16px

	&_borders
		&_none
			border-radius 0

		&_top
			border-radius 4px 4px 0 0

		&_right
			border-radius 0 4px 0 4px

		&_left
			border-radius 4px 0 4px 0

		&_bottom
			border-radius 0 0 4px 4px
