.seek-bar
	display block
	height 16px
	cursor pointer



	&__box
		position relative
		top 6px
		height 3px
		background rgba(0, 0, 0, .4)
		transition all .1s ease-out



	&__bg
		position absolute
		top 0
		left 0
		height 100%
		background rgba(255, 255, 255, 0.3)



	&__seeker
		position absolute
		top -5px
		right -5px
		width 14px
		height 14px
		background-color #808080
		border-radius 50%
		transition all .2s ease

		&_active
			top -7px
			right -7px
			width 18px
			height 18px
