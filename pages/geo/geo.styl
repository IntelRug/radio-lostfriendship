.geo
	display block

	&__controls
		height 50px
		padding 8px 16px
		line-height 34px
		background var(--primary-background)

	&__listeners-count
		font-size 18px
		font-weight bold

	&__map
		width 100%
		height 350px
		background #262626

		& .map
			background transparent

	&__table
		// margin-top 8px
		font-size 16px

	&__table-thead
		overflow hidden scroll
		font-size 18px
		font-weight bold
		background var(--primary-background)

	&__table-tbody
		overflow hidden scroll
		max-height 300px
		background var(--secondary-background)

	&__table-tr
		display flex
		overflow hidden

		&:not(:last-child)
			border-bottom 1px solid rgba(0, 0, 0, .3)

	&__table-th
		&:not(:last-child)
			border-right 1px solid rgba(255, 255, 255, .05)

	&__table-td
		&:not(:last-child)
			border-right 1px solid rgba(0, 0, 0, .3)

	&__table-td,
	&__table-th
		display inline-block
		overflow hidden
		flex-shrink 0
		padding 10px 16px
		white-space nowrap
		text-overflow ellipsis

		&:nth-child(1)
			width 150px

		&:nth-child(2)
			display none
			width 100px
			text-align center

			+above(size-m)
				display block

		&:nth-child(3)
			width 100px

		&:nth-child(4)
			display none
			flex-grow 1
			flex-shrink 1

			+above(size-m)
				display block

		&:nth-child(5)
			flex-grow 1
			flex-shrink 1
			width 200px

			+above(size-m)
				flex-grow 0
				flex-shrink 0
