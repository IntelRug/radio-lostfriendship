.slider
	display block
	height 16px
	cursor pointer

	&:hover
		& ^[0]__seeker
			opacity 1

	&__box
		position relative
		top 6px
		height 3px
		background rgba(255, 255, 255, .1)
		transition all .1s ease-out

	&__bg
		position absolute
		top 0
		left 0
		height 100%
		background var(--primary)
		defaultTransition()

	&__seeker
		position absolute
		top -5px
		right -7px
		width 14px
		height 14px
		background-color var(--primary-light)
		border-radius 50%
		opacity 0
		defaultTransition()

		&_active
			top -7px
			right -7px
			width 18px
			height 18px
