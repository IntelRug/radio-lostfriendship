.player
	position relative
	display flex
	flex-wrap nowrap
	flex-direction row
	height 72px
	padding 16px 32px
	background var(--secondary-background)

	&__slider
		position absolute
		top -6px
		right 0
		left 0

	&__controls
		display flex
		align-items center
		height 100%

		&_position
			&_left
				justify-content left
				flex 0 0 250px

			&_right
				justify-content right
				flex 0 0 250px

			&_center
				overflow hidden
				justify-content center
				flex-grow 1
				min-width 0

	&__button
		width 40px
		height 40px
		padding 8px
		cursor pointer
		user-select none
		background transparent
		border none
		outline none

		&:hover,
		&:active
			border-radius 80px

		&:hover
			background rgba(255, 255, 255, .07)

		&:active
			background rgba(255, 255, 255, .1)

		&_size
			&_large
				width 56px
				height 56px

			&_medium
				width 46px
				height 46px

		&_type
			&_active
				& ^[0]__button-icon
					fill #ffffff

	&__button-icon
		fill #cccccc

	&__duration
		padding 0 16px
		color #aaaaaa
		font-size 14px
		font-weight 500

	&__artwork
		flex-shrink 0
		height 100%
		max-height 100%

	&__metadata
		overflow hidden
		margin-left 16px
		font-size 16px

	&__metadata-title
		overflow hidden
		color #ffffff
		font-weight bold
		white-space nowrap
		text-overflow ellipsis

	&__metadata-artist
		overflow hidden
		color #aaaaaa
		white-space nowrap
		text-overflow ellipsis

	&__voting
		display flex
		padding-left 8px

		& ^[0]__button
			margin 0 4px

	&__volume-slider
		flex-grow 1
