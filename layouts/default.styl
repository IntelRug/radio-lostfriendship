*,
*:before,
*:after
	box-sizing border-box
	margin 0

#__nuxt,
#__layout
	height 100%

.icon
	max-width 100%
	max-height 100%

.page
	overflow hidden
	height 100%
	min-height 100%

	&__wrapper
		display flex
		flex-direction column
		height 100%

	&__body
		overflow hidden
		height 100%
		min-height 100%
		color var(--primary-text)
		font-family 'Roboto', sans-serif
		font-size 14px
		background var(--primary-background)

		+above(size-l)
			background #0f1014 url('~assets/img/relation_by_simonk0.jpg') no-repeat fixed 50% / cover

		&_overflow
			&_hidden
				overflow hidden

	&__header
		position fixed
		top 0
		right 0
		left 0
		z-index 99

	&__wrapper
		+above(size-l)
			background rgba(0, 0, 0, .6)

	&__main
		overflow hidden
		flex-grow 1
		height calc(100vh - (72px + 16px))
		clearfix()

	&__sidebar
		float left
		overflow hidden
		width 50px
		height 100%
		background var(--primary-background)
		// defaultTransition()
		// 
		// &:hover
		// width 250px
		// 
		// & +
		// & ^[0]__content
		// width calc(100% - 250px)

	&__content
		float right
		overflow hidden auto
		width calc(100% - 50px)
		height 100%
		max-height 100%
		defaultTransition()

		+above(size-l)
			padding 16px 32px 0

		&:after
			content ''
			display block
			width 100%
			height 16px
